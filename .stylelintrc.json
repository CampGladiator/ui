{
  "plugins": ["stylelint-scss"],
  "extends": "stylelint-config-prettier",
  "rules": {
    "color-hex-case": "upper",
    "declaration-empty-line-before": "never",
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["if", "each", "else", "include", "mixin", "warn"]
      }
    ]
  }
}
